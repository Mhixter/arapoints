# Arapoint Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/arapoint
DB_SSL=false

# ===========================================
# REDIS (for job queue)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars

# ===========================================
# ENCRYPTION
# ===========================================
ENCRYPTION_KEY=your-32-character-encryption-key!

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Alternative SMTP (legacy)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx

# PalmPay (optional)
PALMPAY_API_KEY=
PALMPAY_SECRET_KEY=

# ===========================================
# RPA CONFIGURATION
# ===========================================
RPA_MAX_CONCURRENT_JOBS=20
RPA_JOB_TIMEOUT=60000
RPA_RETRY_MAX=3
RPA_RETRY_BACKOFF=exponential

# ===========================================
# IDENTITY PROVIDERS (RPA)
# ===========================================
NIMC_USERNAME=
NIMC_PASSWORD=
NIBSS_USERNAME=
NIBSS_PASSWORD=

# VerifyMe API (fallback)
VERIFYME_API_KEY=

# Youverify API (fallback)
YOUVERIFY_API_KEY=

# Legacy naming (still supported)
BVN_SERVICE_USERNAME=
BVN_SERVICE_PASSWORD=
NIN_SERVICE_USERNAME=
NIN_SERVICE_PASSWORD=

# ===========================================
# EDUCATION PROVIDERS (RPA)
# ===========================================
JAMB_USERNAME=
JAMB_PASSWORD=
WAEC_USERNAME=
WAEC_PASSWORD=
NECO_USERNAME=
NECO_PASSWORD=
NABTEB_USERNAME=
NABTEB_PASSWORD=
NBAIS_USERNAME=
NBAIS_PASSWORD=
NPC_USERNAME=
NPC_PASSWORD=

# Legacy naming (still supported)
JAMB_SERVICE_USERNAME=
JAMB_SERVICE_PASSWORD=
WAEC_SERVICE_USERNAME=
WAEC_SERVICE_PASSWORD=
NECO_SERVICE_USERNAME=
NECO_SERVICE_PASSWORD=
NABTEB_SERVICE_USERNAME=
NABTEB_SERVICE_PASSWORD=
NBAIS_SERVICE_USERNAME=
NBAIS_SERVICE_PASSWORD=
NPC_SERVICE_USERNAME=
NPC_SERVICE_PASSWORD=

# ===========================================
# VTU PROVIDERS
# ===========================================
# VTBiz (primary)
VTBIZ_API_KEY=
VTBIZ_SECRET_KEY=

# Reloadly (fallback)
RELOADLY_CLIENT_ID=
RELOADLY_CLIENT_SECRET=

# VTPass (alternative)
VTPASS_API_KEY=
VTPASS_SECRET_KEY=

# Flutterwave Bills (alternative)
FLUTTERWAVE_SECRET_KEY=

# ===========================================
# UTILITY PROVIDERS
# ===========================================
# BuyPower - Electricity (primary)
BUYPOWER_API_KEY=
BUYPOWER_SECRET_KEY=

# Baxi - Cable & Electricity (fallback)
BAXI_API_KEY=

# ===========================================
# ADMIN
# ===========================================
ADMIN_EMAIL=admin@arapoint.com
ADMIN_PHONE=+2348012345678

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# FRONTEND (Vite) - Production
# ===========================================
VITE_API_URL=http://localhost:5000
VITE_APP_ENV=development
